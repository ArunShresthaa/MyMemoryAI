{
    "manifest_version": 3,
    "name": "My Memory",
    "version": "1.0",
    "description": "Memorize selected text and chat with a chatbot.",
    "permissions": [
        "contextMenus",
        "activeTab"
    ],
    "background": {
        "service_worker": "javascript/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}